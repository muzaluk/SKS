<% content_for :leftmenu do %>
	<%= link_to "wszystkie", {:controller=>"news"} %><br/>
	<%= link_to "dodaj", {:controller=>"news", :action=>"new"} %>
<% end %>

<h1>Listing news</h1>

<table>
  <tr>
    <th>Tytul</th>
    <th>Tresc</th>
    <th>Dodane</th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%=h news.tytul %></td>
    <td><%=h news.tresc %></td>
    <td><%=h news.dodane %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
