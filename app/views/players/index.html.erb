<% content_for :leftmenu do %>
	<span class="button"><%= link_to "Wszyscy zawdonicy", players_all_url %></span><br>
	<span class="button"><%= link_to "Dodaj zawodnika", players_new_url %></span>
<% end %>

<span class="head">Wszyscy zawodnicy</span>
<br><br>
<span class="profil">                                                                              
<% @players.each do |player| %>                                                                               

 <img class="avatar" src="<%= player.picture %>", width = "120px", height = "120px", align ="left">
  <span class="dane"><span class="dane_profil">Imie i nazwisko:</span> <%= player.name %><br>
					 <span class="dane_profil">Data urodzenia:</span> <%= player.dateOfBirth %><br>
					 <span class="dane_profil">Opis:</span> <%= player.description %><br>
					 <span class="news_actions zawodnicy_menu"><%= link_to 'Pokaż', player %> || <%= link_to 'Edycja', edit_player_path(player) %> || <%= link_to 'Usuń', player, :confirm => 'Are you sure?', :method => :delete %></span>
					</span>
					
					
<% end %>
 </span> 


